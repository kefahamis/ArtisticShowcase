{
  "kind": "collectionType",
  "collectionName": "artworks",
  "info": {
    "singularName": "artwork",
    "pluralName": "artworks",
    "displayName": "Artwork",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "medium": {
      "type": "string",
      "required": true
    },
    "dimensions": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "imageUrl": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["painting", "sculpture", "photography", "mixed-media", "digital", "installation"],
      "required": true
    },
    "availability": {
      "type": "enumeration",
      "enum": ["available", "sold", "reserved"],
      "default": "available",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "artist": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::artist.artist",
      "inversedBy": "artworks"
    }
  }
}